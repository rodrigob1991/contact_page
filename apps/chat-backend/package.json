{
  "name": "chat-backend",
  "version": "1.0.0",
  "private": true,
  "main": "app.js",
  "license": "MIT",
  "dependencies": {
    "cross-env": "5.0.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "redis": "^4.5.1",
    "uuid": "^9.0.0",
    "utils": "1.0.0",
    "chat-common": "1.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.12",
    "@types/uuid": "^9.0.0",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1"
  },
  "scripts": {
    "dev": "concurrently \"docker start redis\" \"tsc --watch\" \"yarn workspace utils dev\" \"yarn workspace chat-common dev\" \"nodemon --watch ./dist --watch ../../packages dist/app.js\"",
    "build": "tsc --build --verbose --force",
    "start": "nodemon --exec ts-node src/app.ts"
  }
